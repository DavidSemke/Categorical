<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Card View -->
    <style name="cardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!-- Toolbar -->
    <style name="toolbar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:background">@color/dark_violet</item>
    </style>

    <style name="titleText">
        <item name="android:textSize">@dimen/header1</item>
    </style>

    <!-- Alert Dialog Style -->
    <style name="dialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/negativeButton</item>
        <item name="buttonBarPositiveButtonStyle">@style/positiveButton</item>
    </style>

    <style name="negativeButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="positiveButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/purple</item>
    </style>

    <!-- Bottom Nav Bar -->
    <style name="bottomNavView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="backgroundTint">@color/pale_blue</item>
    </style>


</resources>